<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipaddr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Server Host:"
        android:id="@+id/textViewRegServHost"
        android:layout_below="@+id/ipaddr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Server Port:"
        android:id="@+id/textViewRegServPort"
        android:layout_below="@+id/textViewRegServHost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRegServHostValue"
        android:layout_alignBottom="@+id/textViewRegServHost"
        android:layout_toRightOf="@+id/textViewRegServHost"
        android:layout_toEndOf="@+id/textViewRegServHost"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:editable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRegServPortValue"
        android:layout_below="@+id/textViewRegServHostValue"
        android:layout_alignLeft="@+id/textViewRegServHostValue"
        android:layout_alignStart="@+id/textViewRegServHostValue"
        android:editable="true"
        android:focusable="true"
        android:enabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This SIM number:"
        android:id="@+id/textViewThisTelephNum"
        android:layout_below="@+id/textViewRegServPort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewThisSimNumValue"
        android:layout_alignBottom="@+id/textViewThisTelephNum"
        android:layout_toRightOf="@+id/textViewRegServPort"
        android:layout_toEndOf="@+id/textViewRegServPort"
        android:editable="true"
        android:enabled="true"
        android:focusable="true" />

</RelativeLayout>
