<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipaddr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg Server Host:"
        android:id="@+id/textViewRegServHost"
        android:layout_below="@+id/ipaddr"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reg Server Port:"
        android:id="@+id/textViewRegServPort"
        android:layout_below="@+id/textViewRegServHost"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegServerHostValue"
        android:editable="true"
        android:enabled="true"
        android:layout_toRightOf="@+id/textViewRegServHost"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/textViewRegServHost" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextRegServerPortValue"
        android:editable="true"
        android:enabled="true"
        android:layout_toRightOf="@+id/textViewRegServPort"
        android:layout_alignLeft="@+id/editTextRegServerHostValue"
        android:layout_alignBaseline="@+id/textViewRegServPort" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This SIM num:"
        android:id="@+id/textViewThisTelephNum"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textViewRegServPort"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTextThisTelephNum"
        android:editable="true"
        android:enabled="true"
        android:layout_toRightOf="@+id/textViewThisTelephNum"
        android:layout_marginLeft="10dp"
        android:layout_alignBaseline="@+id/textViewThisTelephNum"/>

</RelativeLayout>
